
@{
    ViewBag.Title = "Form";
}


<div class="tm-bg-primary-dark tm-block tm-block-settings">
    <h2 class="tm-block-title">Cadastrar novos documentos</h2>
    <form action="Adicionar" method="post" class="tm-signup-form row">
        <div class="form-group col-lg-6">
            <label for="descricao">Descrição do documento</label>
            <input id="descricao" name="descricao" type="text" class="form-control validate" />
        </div>
        <div class="form-group col-lg-6">
            <label for="idCliente">ID do cliente</label>
            <input id="idCliente" name="idCliente" type="text" class="form-control validate" />
        </div>

        <div class="form-group col-lg-6">
            <label for="Arquivo">Arquivo</label>
            <input id="Arquivo" name="Arquivo" type="file" class="form-control validate">

        </div>




        <div class="custom-file overflow-hidden rounded-pill mb-5">
            <input id="customFile" type="file" class="custom-file-input rounded-pill">
            <label for="customFile" class="custom-file-label rounded-pill">Choose file</label>
        </div>

        <label for="fileUpload" class="file-upload btn btn-primary btn-block rounded-pill shadow">
            <i class="fa fa-upload mr-2"></i>Browse for file ...
            <input id="fileUpload" type="file">
        </label>




        <div class="form-group col-lg-6">
            <label class="tm-hide-sm">&nbsp;</label>
            <button type="submit" class="btn btn-primary btn-block text-uppercase">
                Cadastrar
            </button>
        </div>
    </form>
</div>

