
@{
    ViewBag.Title = "Form";
}

<div class="tm-bg-primary-dark tm-block tm-block-settings">
    <h2 class="tm-block-title">Cadastrar novo pagamento</h2>
    <form action="Adicionar" method="post" class="tm-signup-form row">
        <div class="form-group col-lg-6">
            <label for="nome">Nome do Funcionário</label>
            <input id="nome" name="nome" type="text" class="form-control validate" />
        </div>
        <div class="form-group col-lg-6">
            <label for="login">Login</label>
            <input id="login" name="login" type="text" class="form-control validate" />
        </div>
        <div class="form-group col-lg-6">
            <label for="senha">Senha do funcionário</label>
            <input id="senha" name="senha" type="text" class="form-control validate" />
        </div>
        <div class="form-group col-lg-6">
            <label for="funcao">Função desempenhada</label>
            <input id="funcao" name="funcao" type="text" class="form-control validate" />
        </div>
        <div class="form-group col-lg-6">
            <label class="tm-hide-sm">&nbsp;</label>
            <button type="submit" class="btn btn-primary btn-block text-uppercase">
                Cadastrar
            </button>
        </div>
    </form>
</div>
