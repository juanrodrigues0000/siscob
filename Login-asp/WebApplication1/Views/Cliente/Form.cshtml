
@{
    ViewBag.Title = "Form";
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Form</title>
    <link rel='stylesheet' href='https://use.fontawesome.com/releases/v5.0.10/css/all.css'>
    <link rel="stylesheet" href="~/Content/style.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/prefixfree/1.0.7/prefixfree.min.js"></script>
</head>
<body>

    <div class="leftbox">
        <nav>
            <a id="profile" class="active"><i class="fa fa-user"></i></a>
            <a id="payment"><i class="fa fa-credit-card"></i></a>
            <a id="subscription"><i class="fa fa-tv"></i></a>
            <a id="privacy"><i class="fa fa-tasks"></i></a>
            <a id="settings"><i class="fa fa-cog"></i></a>
        </nav>
    </div>

    <div class="rightbox">

        <div class="row">
            <div class="col-12 text-center">
                <h2 class="tm-block-title mb-4">Cadastro de Empresa</h2>
            </div>
        </div>
        <div class="profile noshow">
            <h1>FORMULARIO PROFILE </h1>
        </div>
        <div class="payment noshow">
        </div>
        <div class="subscription noshow">
            @Html.BeginForm("Adicionar", "Cliente", FormMethod.Post) {

            <label for="nomeCompleto">Nome Completo</label>
            <input id="nomeCompleto" name="nomeCompleto" type="text" />

            <label for="cpf"> CPF </label>
            <input id="cpf" name="cpf" type="text" />

            <label for="cnpj"> CNPJ </label>
            <input id="cnpj" name="cnpj" type="text" />

            <label for="endereco">Endereço</label>
            <input id="endereco" name="endereco" type="text" />

            <input type="submit" value="Cadastrar" />
            }
        </div>
        <div class="privacy noshow">
            <h1>Formulario Contratos</h1>
        </div>
        <div class="settings noshow">
            <h1>Formulario Funcionarios</h1>
        </div>
    </div>

    <!-- partial -->
    <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js'></script>
    <script src="~/Content/script.js"></script>


</body>
</html>

