
@{
    ViewBag.Title = "Listar";
}


<div class="tm-product-table-container">
    <table class="table table-hover tm-table-small tm-product-table">
        <thead>
            <tr>
                <th scope="col">&nbsp;</th>
                <th scope="col">Nome Completo</th>
                <th scope="col">CPF</th>
                <th scope="col">CNPJ</th>
                <th scope="col">Endereço</th>
                <th scope="col">Situação Jurídica</th>
                <th scope="col">Categoria</th>
                <th scope="col">Associados</th>
                <th scope="col">&nbsp;</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cliente in ViewBag.ClienteSet)
            {
            <tr>
                <th scope="col">&nbsp;</th>
                <td class="tm-product-name">@cliente.NomeCompleto</td>
                <td>@cliente.CPF</td>
                <td>@cliente.CNPJ</td>
                <td>@cliente.Endereço</td>
                <td>@cliente.SituacaoJuridica</td>
                <td>@cliente.Categoria</td>
                <td>@cliente.Associados</td>
                <th scope="col">&nbsp;</th>
                <td>
                    <a href="#" class="tm-product-delete-link">
                        <i class="far fa-trash-alt tm-product-delete-icon"></i>
                    </a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>