@model siscob.Pagamento

@{
    ViewBag.Title = "Alterar";
}

@using (Html.BeginForm("AlterarFuncionario", "Funcionario"))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h2 class="tm-block-title">Alterar Dados da Empresa</h2>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(pagamento => pagamento.IdPagamento)

    <div class="form-group col-lg-6">
        @Html.LabelFor(pagamento => pagamento.IdPagamento, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(pagamento => pagamento.ValorIntegralDaParcela, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(pagamento => pagamento.ValorIntegralDaParcela, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group col-lg-6">
        @Html.LabelFor(pagamento => pagamento.Status, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(pagamento => pagamento.Status, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(pagamento => pagamento.Status, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group col-lg-6">
        @Html.LabelFor(pagamento => pagamento.ContratoIdContrato, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(pagamento => pagamento.ContratoIdContrato, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(pagamento => pagamento.ContratoIdContrato, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group col-lg-6">
        @Html.LabelFor(pagamento => pagamento.ClienteIdCliente, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(pagamento => pagamento.ClienteIdCliente, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(pagamento => pagamento.ClienteIdCliente, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group col-lg-6">
        <label for="valorPago">Valor efetuado pelo cliente</label>
        <input id="valorPago" name="valorPago" type="text" class="form-control validate">
    </div>


    <div class="form-group col-lg-6">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Salvar alteração" class="btn btn-primary btn-block text-uppercase" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>


