
@{
    ViewBag.Title= "Empresa";
    ViewBag.Layout = "_Layout";
}



<div class="tm-bg-primary-dark tm-block tm-block-settings">
    <h2 class="tm-block-title">Cadastrar novo pagamento</h2>
    <form action="Adicionar" method="post" class="tm-signup-form row">
        <div class="form-group col-lg-6">
            <label for="nomeEmpresa">Nome da Empresa</label>
            <input id="nomeEmpresa" name="nomeEmpresa" type="text" class="form-control validate" />
        </div>
        <div class="form-group col-lg-6">
            <label for="telefoneEmpresa">Telefone da Empresa</label>
            <input id="telefoneEmpresa" name="telefoneEmpresa" type="text" class="form-control validate" />
        </div>
        <div class="form-group col-lg-6">
            <label for="enderecoEmpresa">Endereco da Empresa</label>
            <input id="enderecoEmpresa" name="enderecoEmpresa" type="text" class="form-control validate" />
        </div>
        <div class="form-group col-lg-6">
            <label class="tm-hide-sm">&nbsp;</label>
            <button type="submit" class="btn btn-primary btn-block text-uppercase">
                Cadastrar
            </button>
        </div>
    </form>
</div>